<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.perutravel.perutravelapp"
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>Perú Travel App</name>

    <description>
        App to track the destinations you selected in the Peru.travel website. 
    </description>

    <author href="http://peru.travel" email="contact@peru.travel">
        Prom Perú 
    </author>

    <gap:platform name="ios" />
    <gap:platform name="android" />

    <preference name="target-device"              value="handset" />
    <preference name="orientation"                value="portrait" />
    <preference name="auto-hide-splash-screen"    value="true" />

    <icon src="images/appicons/appicon-72@2x.png" />
    <icon src="images/appicons/Icon-Small.png"          gap:platform="android"  gap:density="ldpi" />
    <icon src="images/appicons/Icon-Small-50.png"       gap:platform="android"  gap:density="mdpi" />
    <icon src="images/appicons/Icon-Small@2x.png"       gap:platform="android"  gap:density="hdpi" />
    <icon src="images/appicons/Icon-Small@2x.png"       gap:platform="android"  gap:density="xhdpi" />
    <icon src="images/appicons/appicon.png"             gap:platform="ios"      width="57" height="57" />
    <icon src="images/appicons/appicon-72.png"          gap:platform="ios"      width="72" height="72" />
    <icon src="images/appicons/appicon@2x.png"          gap:platform="ios"      width="114" height="114" />
    <icon src="images/appicons/appicon-72@2x.png"       gap:platform="ios"      width="144" height="144" />

    <gap:splash src="images/appicons/200x320.png"       gap:platform="android"  gap:density="ldpi" />
    <gap:splash src="images/appicons/320x480.png"       gap:platform="android"  gap:density="mdpi" />
    <gap:splash src="images/appicons/480x800.png"       gap:platform="android"  gap:density="hdpi" />
    <gap:splash src="images/appicons/720x1280.png"      gap:platform="android"  gap:density="xhdpi" />
    <gap:splash src="images/appicons/Default.png"       gap:platform="ios"      width="320" height="480" />
    <gap:splash src="images/appicons/Default@2x.png"    gap:platform="ios"      width="640" height="960" />
    
    <gap:plugin name="nl.x-services.plugins.socialsharing" />

</widget>